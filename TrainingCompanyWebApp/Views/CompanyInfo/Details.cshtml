@model CompanyInfoViewModel  
@{
    ViewData["Title"] = "Index";
}

<main id="main">
    <!-- ======= Breadcrumbs ======= -->
    <div class="breadcrumbs" data-aos="fade-in">
        <div class="container">
            <h2><b>@ViewContext.RouteData.Values["controller"].ToString()</b> - @ViewContext.RouteData.Values["action"].ToString()</h2>

        </div>
    </div><!-- End Breadcrumbs -->
    <!-- ======= About Section ======= -->
    <section id="about" class="about" style="padding: 40px 0 0;">
        <div class="container" data-aos="fade-up">

            <div class="row">
                <div class="col-lg-6 order-1 order-lg-2" data-aos="fade-left" data-aos-delay="100">
                    @if (Model.TrainingCompany != null)
                    {
                        if (Model.TrainingCompany.Picture != null)
                        {
                            <img src="data:image/jpg;base64,@(Convert.ToBase64String(Model.TrainingCompany.Picture))" alt="@Model.TrainingCompany.Name"  style="width:100%;height:300px" class="img-thumbnail" />
                            @*<img src="@Url.Action("CompanyContact", "", new { id = Model.TrainingCompany.Id })" alt="no img..." style="width:100%;height:100%" class="img-thumbnail" />*@
                        }
                        else
                        {
                            <img src="~/assets/img/about.jpg" asp-append-version="true" style="width:100%;height:80%" />


                        }
                    }
                </div>
                <div class="col-lg-6 pt-4 pt-lg-0 order-2 order-lg-1 content">
                    @if (Model.TrainingCompany != null)
                    {
                        <h3>@Model.TrainingCompany.Name</h3>
                        <p class="font-italic">@Model.TrainingCompany.Specialization</p>
                        <p> @Model.TrainingCompany.Description</p>
                    }

                </div>
            </div>

        </div>
    </section><!-- End About Section -->
    <!-- ======= Contact Section ======= -->
    <section id="contact" class="contact" >


        <div class="container" data-aos="fade-up">

            <div class="row row-cols-3 ">


                <div class="info" style="display: contents">
                    <div class="col">
                        <div class="address">
                            <i class="icofont-google-map"></i>
                            <h4>Location:</h4>
                            <p>@Model.Contact.Location</p>
                        </div>
                    </div>
                    <div class="col">
                        <div class="email">
                            <i class="icofont-envelope"></i>
                            <h4>Email:</h4>
                            <p>@Model.Contact.Email</p>
                        </div>
                    </div>
                    <div class="col">
                        <div class="phone">
                            <i class="icofont-phone"></i>
                            <h4>Phone:</h4>
                            <p>@Model.Contact.Phone</p>
                        </div>
                    </div>
                </div>

            </div>



        </div>

    </section><!-- End Contact Section -->
    <div class="container"  style=" padding-bottom: 45px;">
        <a asp-action="Edit" asp-controller="CompanyInfo" class="get-started-btn">Edit</a>
        </div>
</main>