@model Trainers

@{
    ViewData["Title"] = "Delete";
}

<div class="container" style="margin-top: 100px;">
    <h3><b>@ViewContext.RouteData.Values["controller"].ToString()</b> - @ViewContext.RouteData.Values["action"].ToString()</h3>
    <hr />
    <h3 style="margin-top: 50px;">Are you sure you want to delete this?</h3>

    <dl class="row" >
        <dt class="col-sm-1">@Html.DisplayNameFor(model => model.Name)</dt>
        <dd class="col-sm-11">@Html.DisplayFor(model => model.Name)</dd>

        <dt class="col-sm-1">@Html.DisplayNameFor(model => model.RegDate)</dt>
        <dd class="col-sm-11">
            <p>@Model.RegDate.ToShortDateString()</p>
           
        </dd>
        <dd style="margin-bottom:180px">
            <form asp-action="Delete">
                @*<input type="hidden" asp-for="Id" />*@
                <input type="submit" value="Delete" class="btn btn-danger" /> |
                <a asp-action="Index">Back to List</a>
            </form>
        </dd>
    </dl>



        
</div>