@model TrainersViewModel

@{
    ViewData["Title"] = "Edit";
}

<div class="container" style="margin-top:80px;">
    <h3><b>@ViewContext.RouteData.Values["controller"].ToString()</b> - @ViewContext.RouteData.Values["action"].ToString()</h3>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Edit" enctype="multipart/form-data">
                @*<div asp-validation-summary="ModelOnly" class="text-danger"></div>*@

                <div asp-validation-summary="All" class="text-danger"></div>

                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text" asp-for="Name" id="inputGroup-sizing-default">Name</span>
                    </div>
                    <input type="text" asp-for="Name" class="form-control" aria-label="Default" aria-describedby="inputGroup-sizing-default">
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text" asp-for="RegDate" id="inputGroup-sizing-default">RegDate</span>
                    </div>
                    <input type="date" asp-for="RegDate" class="form-control" aria-label="Default" aria-describedby="inputGroup-sizing-default">
                    <span asp-validation-for="RegDate" class="text-danger"></span>
                </div>
                <div class="input-group mb-3">
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text" asp-for="Specialization" id="inputGroup-sizing-default">Specialization</span>
                        </div>
                        <input type="text" asp-for="Specialization" class="form-control" aria-label="Default" aria-describedby="inputGroup-sizing-default">
                        <span asp-validation-for="Specialization" class="text-danger"></span>
                    </div>
                    <div class="input-group-prepend">
                        <span class="input-group-text" asp-for="Specialization" id="inputGroup-sizing-default">Email</span>
                    </div>
                    <input type="text" asp-for="Email" class="form-control" aria-label="Default" aria-describedby="inputGroup-sizing-default">
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text" asp-for="Facebook" id="inputGroup-sizing-default">Facebook</span>
                    </div>
                    <input type="text" asp-for="Facebook" class="form-control" aria-label="Default" aria-describedby="inputGroup-sizing-default">
                    <span asp-validation-for="Facebook" class="text-danger"></span>
                </div>
                <label>Picture</label>

                <div class="form-group row">
                    <div class="custom-file">
                        <input id="fileAttach" type="file" asp-for="File" onchange="UploadAttach(this);" class="form-control  custom-file-input" />
                        <label class="custom-file-label">Choose file...</label>
                        @*<span asp-validation-for="ImageUrl" class="text-danger"></span>*@
                    </div>

                </div>
                <div class="form-group row">
                    @if (Model.DataFile != null)
                    {
                        <img src="data:image/jpg;base64,@(Convert.ToBase64String(Model.DataFile))" alt="@Model.Name" id="imgAttach" style="width:100%;height:300px" onclick="return clickFile();" class="img-thumbnail" />
                        @*<img src="@Url.Action("GetImage", "Trainers", new { id = Model.Id })" alt="@Model.Name" style="width:100%;height:200px"/>*@
                    }
                </div>


                @Html.HiddenFor(m => m.DataFile, Model.DataFile)
                <input type="hidden" asp-for="CreatedDate" />

                <div class="form-group" style="margin-top:20px;">
                    <input type="submit" value="Save" class="btn btn-primary" /> |
                    <a asp-action="Index">Back to List</a>
                </div>

            </form>
        </div>
    </div>
</div>
@section Scripts{
    <partial name="_Validate" />
    <script src="~/js/JavaScript.js"></script>
}
