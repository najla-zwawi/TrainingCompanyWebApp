@{
    ViewBag.Title = "Error";
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags -->
    <!-- Google font -->
    <link href="https://fonts.googleapis.com/css?family=Nunito:400,700" rel="stylesheet">

    <!-- Custom stlylesheet -->


    <link href="~/css/style.css" rel="stylesheet" />
</head>

<body>
    <div id="notfound">
        <div class="notfound">
            <div class="notfound-404"></div>
            <b>An occured while processing your request</b>
            <h6>the support team is notified and we are working on the fix</h6>
            <div class="alert alert-danger">
                <b>Exception Path</b>
                <hr />
                <small>@ViewBag.ExceptionPath</small>
            </div>
            <div class="alert alert-danger">
                <b>Exception Message</b>
                <hr />
                <small>@ViewBag.ExceptionMessage</small>
            </div>
            <div class="alert alert-danger">
                <b>StackTrace</b>
                <hr />
                <small>@ViewBag.ExceptionStackTrace</small>
            </div>        
        </div>
    </div>
</body>
</html>